<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sdsmdg.pulkit.callingtext.NewFragment"
    tools:showIn="@layout/app_bar_main"
    android:layout_marginTop="200dp"
    android:background="#ffffff"
    android:id="@+id/my_layout">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@drawable/gifimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="40dp">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColorHint="@color/colorPrimary"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:hint="Phone Number"
        android:id="@+id/editText2" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="100dp">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Your Message"
        android:textColorHint="@color/colorPrimary"
        android:id="@+id/editText"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</android.support.design.widget.TextInputLayout>

    <FrameLayout
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/color">

    </FrameLayout>

    <Button
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/styles1"
        android:id="@+id/button4"
        android:layout_below="@+id/input_layout_password2"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <FrameLayout
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/color">

    </FrameLayout>


    <FrameLayout
        android:layout_marginLeft="25dp"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/input_layout_password">
    </FrameLayout>
</RelativeLayout>
