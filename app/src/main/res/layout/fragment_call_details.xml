<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdsmdg.pulkit.callingtext.CallDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="letscall"
            android:id="@+id/callcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/call3"
                android:id="@+id/call_image" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:id="@+id/cname"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/msgcard"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/msg"
                android:id="@+id/msg_image" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:id="@+id/msg_text"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/concard"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/contact"
                android:id="@+id/con_image" />

            <TextView
                android:text="View Contact"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:id="@+id/con_text"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/delcard"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/cross"
                android:id="@+id/del_image" />

            <TextView
                android:text="Delete from log"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:id="@+id/del_text"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="DURATION"/>
        <View
            android:layout_width="365dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>
</FrameLayout>
